<div class="login-container">
  <div class="card-login">
    <%= image_tag "logo.png" %>
    <p><em>Prêt à cuisiner ta semaine?</em></p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, class:'text-left', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Connectez-vous", class: "btn-login" %>
      </div>
    <% end %>
    <div class="test">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
